    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: train.py",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/raft/train.py",
            "args": [
                "--name", "overfit_raft_viper_100_sample_seed_0_all_iters_semantic_loss_without_semseg",
                "--num_overfit_samples", "100",
                "--stage", "viper",
                "--validation", "kitti",
                "--restore_ckpt", "../models/raft_original_models/raft-things.pth",
                "--gpus", "0",
                "--num_steps", "2000",
                "--batch_size", "6",
                "--lr", "0.0001",
                "--image_size", "288", "960",
                "--wdecay", "0.0001",
                "--seed", "0",
                "--debug_iter",
                "--semantic_loss", "True"
            ],
            "cwd": "${workspaceFolder}/raft"
        },
        {
            "name": "Python: run_inference_visu.py",
            "type": "python",
            "request": "launch",
            "module": "core.utils.visu.run_inference_visu",
            "args": [
                "--model", "../checkpoints/raft_uncertainty/overfit_raft_chairs_100_sample_seed_0_nll_loss_v1_UPDATE/raft-chairs.pth",
                "--out", "../dump/inference/uncertainty",
                "--uncertainty"
            ],
            "cwd": "${workspaceFolder}/raft"
        },
        {
            "name": "Python: run_dataset_visu.py",
            "type": "python",
            "request": "launch",
            "module": "core.utils.visu.run_dataset_visu",
            "args": [
                "--dataset_root", "/home/mnegru/repos/optical-flow-dnn/raft/datasets/FlyingChairs",
                "--out", "/home/mnegru/repos/optical-flow-dnn/dump/input/chairs_dataset",
            ],
            "cwd": "${workspaceFolder}/raft"
        }
    ]
}